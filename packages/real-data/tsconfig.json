{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "es2022"],
    "module": "es2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./built",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true
  },
  "include": ["./src/**/*"]
}
